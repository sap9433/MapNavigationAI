{
  "parser": "babel-eslint",
  "rules": {
    "indent": 0,
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    id-length: [1, {min: 1}],
    "no-reserved-keys": 0,
    "no-wrap-func": 0,
    "func-names": 0,
    "object-curly-spacing": 0,
    "spaced-line-comment": 0,
    "react/sort-comp": [1, {
      "order": [
        "constructor",
        "lifecycle",
        "render",
        "everything-else"
      ]
    }],
    "id-length": [1, {
      "exceptions": ["e"]
    }]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": ["airbnb", "airplus"],
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "__DEVTOOLS__": true
  }
}
